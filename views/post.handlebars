<h1>{{title}}</h1>
<p>By {{user.username}} on {{createdAt}}</p>
<p>{{content}}</p>
{{#if logged_in}}
  <form id="comment-form">
    <textarea id="comment" placeholder="Add a comment" required></textarea>
    <button type="submit">Submit</button>
  </form>
{{/if}}
<h2>Comments</h2>
{{#each comments}}
  <div class="comment">
    <p>{{content}}</p>
    <p>By {{user.username}} on {{createdAt}}</p>
  </div>
{{/each}}
<script src="/js/comment.js"></script>
